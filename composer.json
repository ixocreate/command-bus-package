{
    "name": "ixocreate/command-bus-package",
    "description": "IXOCREATE Command Bus Package",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "IXOCREATE",
            "email": "opensource@ixocreate.com",
            "homepage": "https://www.ixocreate.com",
            "role": "Developer"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.2 || ^8.0",
        "ixocreate/application": "dev-develop",
        "ixocreate/command-bus": "dev-develop",
        "ixocreate/filter-package": "dev-develop",
        "ixocreate/validation-package": "dev-develop",
        "ramsey/uuid": "^4.0"
    },
    "require-dev": {
        "ixocreate/coding-standard": "^2.0",
        "ixocreate/test": "dev-develop"
    },
    "autoload": {
        "psr-4": {
            "Ixocreate\\CommandBus\\": "src/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "fix-cs": "vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix --config vendor/ixocreate/coding-standard/.php_cs"
    }
}
